+  margin-bottom: 0.5rem;
+  font-weight: bold;
+  color: var(--soviet-light-gray);
+}
+
+.form-control {
+  width: 100%;
+  padding: 0.8rem;
+  border: 2px solid var(--soviet-red);
+  background-color: var(--soviet-black);
+  color: var(--soviet-white);
+  font-family: var(--font-body);
