+  display: flex;
+  justify-content: center;
+  margin: 2rem 0;
+}
+
+.page-item {
+  margin: 0 0.3rem;
+}
+
+.page-link {
+  display: block;
+  padding: 0.5rem 1rem;
+  background-color: var(--soviet-gray);
+  border: 1px solid var(--soviet-red);
+  color: var(--soviet-white);
