+  margin-bottom: 2rem;
+  border-left: 4px solid var(--soviet-red);
+  padding-left: 1rem;
+}
+
+.post-header {
+  margin-bottom: 0.5rem;
+}
+
+.post-title {
+  margin: 0;
+}
+
+.post-meta {
